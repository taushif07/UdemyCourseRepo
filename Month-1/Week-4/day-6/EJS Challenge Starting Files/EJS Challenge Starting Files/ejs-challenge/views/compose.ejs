<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="publishInputTitle" class="form-label">Title</label>
        <input class="form-control" id="publishInputTitle" type="text" name="publishInputContent" >
        <label for="publishTextArea" class="form-label">Post</label>
        <textarea class="form-control" name="publishTextAreaContent" id="publishTextArea" cols="30" rows="10"></textarea>
    </div>
    
    <button type="submit"  class="btn btn-primary" name="publishButton">Publish</button>
</form>

<%- include("partials/footer") -%>